#Mantainer: Giovanni "Talorno" Ricciardi <kar98k.sniper@gmail.com>

pkgname=libmatenotify
pkgver=1.4.1
pkgrel=1
pkgdesc="Desktop notification library"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('gdk-pixbuf2')
makedepends=('gtk2' 'gobject-introspection')
groups=('mate')
options=('!emptydirs' '!libtool')
url="http://mate-desktop.org"
source=(http://pub.mate-desktop.org/releases/1.4/${pkgname}-${pkgver}.tar.xz)
sha256sums=('a94c25ceb22692d998b209adaa9894e2f220a1c6aed72f50a43b1c925cacf137')


build() {
    cd "${srcdir}/$pkgname-$pkgver"
    ./autogen.sh \
        --prefix=/usr \
        --disable-static || return 1
    make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"
    make DESTDIR="${pkgdir}" install || return 1
}
