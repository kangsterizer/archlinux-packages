#Mantainer: Giovanni "Talorno" Ricciardi <kar98k.sniper@gmail.com>

pkgname=mate-common
pkgver=1.5.1
pkgrel=1
pkgdesc="Common development macros for MATE"
arch=('any')
license=('GPL')
depends=()
makedepends=()
options=('!libtool')
url="http://mate-desktop.org"
groups=('mate')
source=(http://pub.mate-desktop.org/releases/1.5/${pkgname}-${pkgver}.tar.xz)
sha256sums=('fa8298d15c1575654dfc8446e7c2eb3a6e6e33ff8c653fabc9482df0be48c8fb')


build() {
    cd "${srcdir}/$pkgname-$pkgver"
    ./autogen.sh \
        --prefix=/usr || return 1
    make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"
    make DESTDIR="${pkgdir}" install || return 1
}
