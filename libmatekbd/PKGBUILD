#Mantainer: Giovanni "Talorno" Ricciardi <kar98k.sniper@gmail.com>

pkgname=libmatekbd
pkgver=1.5.1
pkgrel=1
pkgdesc="MATE keyboard library"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('libxklavier') #  'dconf'
makedepends=('intltool' 'pkgconfig')
groups=('mate')
url="http://mate-desktop.org"
options=('!emptydirs' '!libtool')
#install=libmatekbd.install
source=(http://pub.mate-desktop.org/releases/1.5/${pkgname}-${pkgver}.tar.xz)
sha256sums=('eb61dcd2f0276848d5c6c4a06093d46249faae72d4131bdb1a070899fb7bd006')

build() {
    cd "${srcdir}/$pkgname-$pkgver"
    ./autogen.sh \
        --prefix=/usr \
        --sysconfdir=/etc \
        --disable-static || return 1
    make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"

    make DESTDIR="${pkgdir}" install || return 1
}
